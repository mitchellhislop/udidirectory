<%= raw header_for_page("Your UDIDs") %>

<p>Welcome, <%= @user.screen_name %>.</p>

<% if @udids.count == 0 then %>
	<p>It looks like you don't have any UDIDs added yet. Add one below.</p>
<% end %>

<table>
	<thead>
		<tr>
			<th>
				Device Name
			</th>
			<th>
				UDID
			</th>
			<th>
			</th>
		</tr>
	</thead>
	<% @udids.each do |udid| %>
	<tr>
		<td>
			<%= udid.name %>
		</td>
		<td>
			<%= udid.udid %>
		</td>
		<td>
			<%= link_to 'Delete', udid, :confirm => 'Are you sure you want to delete this UDID?', :method => :delete, :class => "btn danger" %>
		</td>
	</tr>
	<% end %>

	<tr>
		<td>
		</td>
		<td>
		</td>
		<td>
			<%= link_to 'Add New UDID...', new_udid_path, :class => "btn primary" %>
		</td>
	</tr>

</table>

<h2>Friends</h2>
<table>
	<thead>
		<tr>
			<th>
				Device Name
			</th>
			<th>
				UDID
			</th>
			<th>
			</th>
		</tr>
	</thead>
	<% @friends.each do |friend| %>
	<tr>
		<td><%= friend.name %> (<%= friend.screen_name%>)</td>
		<% friend.udids.each do |udid| %>
		<tr>
			<td>
				<%= udid.name %>
			</td>
			<td>
				<%= udid.udid %>
			</td>
		</tr>
		<% end %>
	<% end %>
</table>

<%= debug @friends %>

