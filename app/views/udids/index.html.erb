<%= raw header_for_page("UDIDs") %>

<p>Welcome, <%= @user.screen_name %>.</p>

<% if @udids.count == 0 then %>
	<p>It looks like you don't have any UDIDs added yet. Add one below.</p>
<% end %>

<h2>Your UDIDs</h2>
<table>
	<thead>
		<tr>
			<th>
				Device Name
			</th>
			<th>
				UDID
			</th>
			<th>
			</th>
		</tr>
	</thead>
	<% @udids.each do |udid| %>
	<tr>
		<td>
			<%= udid.name %>
		</td>
		<td>
			<%= udid.udid %>
		</td>
		<td>
			<%= link_to 'Delete', udid, :confirm => 'Are you sure you want to delete this UDID?', :method => :delete, :class => "btn danger" %>
		</td>
	</tr>
	<% end %>

	<tr>
		<td>
		</td>
		<td>
		</td>
		<td>
			<%= link_to 'Add New UDID...', new_udid_path, :class => "btn primary" %>
		</td>
	</tr>

</table>

<% if !@friends.empty? %>

<h2>Friends UDIDs</h2>

<div class="row">
	<div class="span4">
	</div>
	<div class="span6">
		<strong>Device Name</strong>
	</div>
	<div class="span8">
		<strong>UUID</strong>
	</div>
</div>

<% @friends.each do |friend| %>
<div class="row">
	<div class="span16">
			<h3><%= friend.name %> <small><%= friend.screen_name %></small></h3>
	</div>
</div>

<% friend.udids.each do |udid| %>
<div class="row">
	<div class="span4">
	</div>
	<div class="span6">
		<p><%= udid.name %></p>
	</div>
	<div class="span8">
		<p><%= udid.udid %></p>
	</div>
</div>
<% end %>

<hr>
<% end %>

<% end #end if friends not empty %>

