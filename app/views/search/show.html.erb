<%= form_for :twitter_user, :url => search_url do |f| %>
  <%= text_field_tag :q %>
  <%= submit_tag "BONGO" %>
<% end %>

<% if @users && !@users.empty? %>
  <% @users.each do |user| %>
    <%= link_to twitter_user_url(user) do %>
      <div>
        <%= user.name %>
        <%= user.screen_name %>
      </div>
    <% end %>
  <% end %>
<% else %>
  <p>no users found</p>
<% end %>
